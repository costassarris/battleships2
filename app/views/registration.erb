<div align="center">

  <% if @player1 %>
    Welcome <%= @player1 %>!
    <a href="/play">Start Game</a>
  <% else %>
    <form action="/registration" method="post">
      Please enter your name:
      <input  type="text" name="Name">
      <input type="submit" value="Submit">
    </form>
  <% end %>

<% if @message %>
  <h1><%= @message %></h1>
<% end %>

</div>